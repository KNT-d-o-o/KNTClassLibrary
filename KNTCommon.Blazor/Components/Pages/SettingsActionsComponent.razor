@* SettingsActionsComponent *@

<div class="ScrollableOuterDiv Animation">
    <RadzenButton Click='() => RestartServer(true)' Icon="restart_alt" class="MenuIcons rz-ripple" Size="ButtonSize.Large" ButtonStyle="ButtonStyle.Light" Variant="Variant.Outlined"></RadzenButton>

    <RadzenButton Click='() => RestartServer(false)' Icon="highlight_off" class="MenuIcons rz-ripple" Size="ButtonSize.Large" ButtonStyle="ButtonStyle.Light" Variant="Variant.Outlined"></RadzenButton>
</div>

@code {

    private void RestartServer(bool start)
    {
        PowerShellHelper.ExecuteRestartScript(start);
    }

}



